extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-indigo
        h3 MyTwitter
      .w3-container
        form.w3-container(id="tweetForm" method="POST" action="/")
          fieldset
            legend Nova Entrada
            h4 Tweet
              textarea.w3-input.w3-border.w3-light-grey(name="texto" rows="3" cols="80" required)
            h4 Autor
              input.w3-input(type="text" name="autor" placeholder="Inserir o Autor" required)
            h4 Hash
              input.w3-input(type="text" name="hash" placeholder="Insera o HahsTag" required)
            button.w3-button.w3-round-large.w3-indigo(id="adicionar" type="submit") Adicionar
        .w3-container
          fieldset
            legend Tweet
            table.w3-table-all
              each tweet in lista
                tr
                  td
                    h4
                      b #{tweet.autor} :: #{tweet.hash}
                    p= tweet.texto
                    button.w3-button.w3.w3-indigo.BATATAS(id=tweet._id name="gosto") Gosto (#{tweet.gosto})