extends layout

block content

  .w3-container
      input(type="hidden" value=nome id="escondido")
      .w3-card-4
        header.w3-container.w3-teal
          h2 Informacões da classe #{nome}
        table.w3-table-all
          each cod in informacoes
            tr
                th Titulo
                td= cod.titulo
            tr
                th Descricão
                td= cod.desc
            if cod.tituloPai
                tr
                    th Titulo Pai
                    td= cod.tituloPai
            if cod.status
                tr
                    th Status
                    td= cod.status
            if cod.codigoPai
                tr
                    th Codigo Pai
                    td= cod.codigoPai
            if cod.pt
                tr
                    th PT
                    td= cod.pt
            if cod.procTrans
                tr
                    th procTrans
                    td= cod.procTrans
            if cod.procTipo
                tr
                    th procTipo
                    td= cod.procTipo
        footer.w3-container.w3-teal
          adress Informacões da classe #{nome}
        

      .w3-card-4
      header.w3-container.w3-teal
        h2 Descendentes da classe #{nome}
      table.w3-table-all
        tr
          th Código
          th Titulo
          th Id
        each e in classes
          tr
            td
              a(href="/classe/"+e.codigo)= e.codigo
            td
              a(href="/codigo/"+e.codigo)= e.titulo
            td
              a(href=e.id)= e.id
      footer.w3-container.w3-teal
         adress Descendentes da classe #{nome}
      br
      input.w3-btn.w3-blue-grey(type='button' id="botao" value='Voltar para a classe!' style="width: 100%;") 
      br
      br
      input.w3-btn.w3-blue-grey( style="width: 100%;" type='submit' id="botao2" value='Voltar para página inicial!' onclick="window.location='/';")
      br

