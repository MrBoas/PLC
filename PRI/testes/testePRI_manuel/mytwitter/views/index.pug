extends layout

block content
    .w3-container
        header
            h1 MyTwitter
        .w3-card-4
            header.w3-container.w3-teal
                h3 Nova Entrada
            .w3-container
                form.w3-container(method='POST' action='/addEvento')
                    input.w3-input(type='text' name='texto' placeholder='Texto:')
                    input.w3-input(type='text' name='autor' placeholder='Autor:')
                    input.w3-input(type='text' name='password' placeholder='Palavra-chave/Hash:')
                    p
                    input.w3-btn.w3-teal(type='submit' value='Enviar')
                    p
    p
    .w3-container    
        .w3-card-4
            header.w3-container.w3-teal
                h3 Discuss√µes
            .w3-container
                each n in noticias
                    p
                        b= n.autor
                        b  :: 
                        b= n.password
                    p= n.texto
                    - var gostos = "Gostos (" + n.gostos + ")"
                    form.w3-container(method='POST' action='/addGosto' id='gostos_form')
                        input(type='hidden' id='password' name='password' value=n.password)
                        input.w3-btn.w3-teal(type='submit' value=gostos id='gostos')
                    hr
